<div class="container">
  <h1>Welcome to the Anagram Jungle</h1>
  <% if @word%>

    <h3>Here are the anagrams for <%= @word %>:</h3>

    <% if @anagrams.size > 1 %>
      <div>
        <ul>
          <% @anagrams.each do |anag| %>
            <li>
              <%= anag.word %>
            </li>
          <% end %>
        </ul>
      </div>
    <% else %>
      <p> Whoops, <%= @word %> has only one anagram, itself.</p>  
    

    <% end %>
    <% end %>

    <hr>

    <form action='/' method='POST'>
      <input type='text' name='word'>
      <input type='submit' value='go!'>
    </form>
  </div>

